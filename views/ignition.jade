!!! 5
html
  head
    title #{name} - Ignition!
    link(rel="stylesheet", href="/css/bootstrap.min.css", type="text/css")
    link(rel="stylesheet", href="/css/bootstrap-responsive.min.css", type="text/css")
    link(rel="stylesheet", href="/css/ignition.css", type="text/css")
    - if (refresh != "off")
        meta(http-equiv="refresh", content="5")
  body
    p
        <br/>
    .container
        .hero-unit
            h1 #{name}
            h2 Instance Status: #{currentState} 
            - if (action != 'start') 
                h2 Server Status: #{health} 
                h2 Started by: #{startedby}
            h2 Last Launched: #{launchtime}
            - var c = (action === 'start' ? 'btn btn-success btn-large huge-button' : 'btn btn-danger btn-large huge-button')
            a(class=c, href='/#{action}/#{instanceId}/#{elasticIp}') #{action}

        h5 (#{instanceId} #{elasticIp})
